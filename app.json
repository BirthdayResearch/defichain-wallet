{
  "expo": {
    "name": "DeFiChain Wallet",
    "description": "DeFi Blockchain Light Wallet for iOS, Android & Web.",
    "slug": "wallet",
    "owner": "defichain",
    "version": "0.10.10",
    "orientation": "portrait",
    "icon": "./mobile-app/app/assets/images/icon.png",
    "scheme": "dfc",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./mobile-app/app/assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.defichain.app",
      "buildNumber": "0.10.10",
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses FaceID to enable privacy lock on device."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./mobile-app/app/assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.defichain.app",
      "versionCode": 420001010,
      "intentFilters": [
        {
          "autoVerify": true,
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "*.youtube.com"
            },
            {
              "scheme": "https",
              "host": "*.twitter.com"
            },
            {
              "scheme": "https",
              "host": "*.reddit.com"
            },
            {
              "scheme": "https",
              "host": "*.github.com"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./mobile-app/app/assets/images/favicon.png"
    }
  }
}
