{
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "react",
    "react-native",
    "react-hooks"
  ],
  "extends": [
    "standard-with-typescript",
    "standard-jsx"
  ],
  "ignorePatterns": [
    "*.json",
    "cypress/support/*.ts"
  ],
  "overrides": [
    // Js and Typescript files
    {
      "files": [
        ".js",
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "import/no-default-export": "warn",
        "curly": [
          "error",
          "all"
        ],
        "brace-style": [
          "error",
          "1tbs"
        ],
        "keyword-spacing": [
          "error",
          {
            "before": true,
            "after": true
          }
        ]
      },
      "excludedFiles": [
        "*.test.ts",
        "*.test.tsx"
      ]
    },
    // Unit test files
    {
      "files": [
        "*.test.ts",
        "*.test.tsx"
      ],
      "plugins": [
        "jest"
      ],
      "extends": [
        "plugin:jest/recommended"
      ]
    }
  ]
}
